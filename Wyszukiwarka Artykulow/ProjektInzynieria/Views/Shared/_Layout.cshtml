<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Projekt Inżynieria</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjektInzynieria.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
            letter-spacing: 0.05em;
            color: #343a40 !important;
            transition: color 0.3s ease;
        }

            .navbar-brand:hover {
                color: #007bff !important;
                text-decoration: none;
            }

        .nav-link {
            font-weight: 500;
            font-size: 1.1rem;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: #007bff !important;
                text-decoration: underline;
            }

        footer.footer {
            background-color: #343a40;
            color: #adb5bd;
            padding: 15px 0;
            margin-top: 40px;
            font-size: 0.9rem;
        }

            footer.footer a {
                color: #adb5bd;
                text-decoration: underline;
            }

                footer.footer a:hover {
                    color: #fff;
                    text-decoration: none;
                }

        main.pb-3 {
            min-height: 70vh;
            padding-top: 30px;
            padding-bottom: 30px;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-4">
            <div class="container-fluid px-4">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Wyszukiwarka Artykułów – Projekt Inżynieria Oprogramowania
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Strona Główna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="DataBaseOperations" asp-action="Index">
                                Panel edycji bazy artykułów
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center">
        <div class="container">
            &copy; 2025 – Projekt Inżynieria –
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Polityka Prywatności</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>